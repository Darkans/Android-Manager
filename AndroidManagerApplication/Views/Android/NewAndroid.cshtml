@model AndroidManagerApplication.Models.ViewModels.EditAndroidViewModel
@{
	ViewBag.Title = "Add android";
}
<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>New Android</title>
</head>
<body>
	<div class="container pt-3">
		@using (Html.BeginForm("CreateAndroid", "Android", FormMethod.Post, new { encType = "multipart/form-data" }))
		{
			<div class="form-group">
				@Html.LabelFor(m => m.Name) <br />
				@Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter name" } })
				<small class="form-text text-muted">Use only alpha-numeric characters</small>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Skills) <br />
				@Html.EditorFor(m => m.Skills, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter skills" } })
				<small class="form-text text-muted">Separate skills by "<b>,</b>"</small>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Reliability) <br />
				@Html.EditorFor(m => m.Reliability, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter reliability", @value = Model.Reliability } })
				<small class="form-text text-muted">Set value from 0 to 100</small>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Avatar) <br />
				@Html.TextBoxFor(m => m.Avatar, new { type = "file", @class = "form-control-file" })
			</div>
			<div class="form-group">
				@Html.LabelFor(model => model.JobId)
				@Html.DropDownListFor(model => model.JobId, ViewBag.JobList as SelectList)
			</div>
			<input type="submit" class="btn" />
		}
		<div class="text-danger pt-3">
			@Html.ValidationSummary()
		</div>
	</div>
</body>
</html>
